---
import skills from "../data/skills.json";
import softSkills from "../data/soft-skills.json";
---

<h1 class="text-6xl text-center mt-20 font-bold">Skills</h1>

<div class="lg:grid-cols-2 mx-auto md:w-auto">
    <div class="flex flex-col justify-center">
        <h2 class="text-4xl m-10 text-center">Technical Skills</h2>
        <div class="md:grid md:grid-cols-2">
            {
                skills.map((skill) => (
                    <>
                        <div class="flex justify-center bg-fondo-claro bg-opacity-15 text-4xl gap-8 p-4 m-6 border-2 rounded-lg w-auto">
                            <img
                                src={skill.img}
                                alt="Experience icon"
                                class="w-14 h-14"
                            />

                            <div class="flex flex-col">
                                <h3 class="text-center">{skill.title}</h3>
                                <p class="text-xl text-center">
                                    {skill.experience}
                                </p>
                            </div>
                        </div>
                    </>
                ))
            }
        </div>
    </div>

    <div class="flex flex-col justify-center">
        <h2 class="text-4xl m-10 text-center">Soft Skills</h2>
        <div class="md:grid md:grid-cols-2">
            {
                softSkills.map((skill) => (
                    <>
                        <div class="flex justify-center bg-fondo-claro bg-opacity-15 text-4xl gap-8 p-4 m-6 border-2 rounded-lg w-auto">
                            <div class="flex flex-col">
                                <h3 class="text-center">{skill.title}</h3>
                                <p class="text-base text-center mt-2">
                                    - {skill.description}
                                </p>
                            </div>
                        </div>
                    </>
                ))
            }
        </div>
    </div>
</div>
